{
  "name": "webmax",
  "version": "1.0.1-1",
  "icon": "./assets/mainapp.png",
  "description": "WebMax for Linux (unofficial)",
  "main": "dist/index.js",
  "scripts": {
    "dist": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run dist && electron .",
    "build": "npm run dist && electron-builder"
  },
  "author": "wildcat",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^21.0.1",
    "electron-builder": "^23.3.3",
    "typescript": "^4.8.4"
  },
  "build":
  {
    "win": {
      "appId": "WebMax Desktop",
      "icon": "./assets/mainapp.ico"
    },
    "linux": {
      "appId": "WebMax Desktop",
      "icon": "./assets/mainapp.png"
    },
    "directories": {
      "output": "./build"
    },
    "files": [
      "dist",
      "package.json"
    ],
    "extraFiles": [
      "assets"
    ]
  }
}
